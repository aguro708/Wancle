<div class="item-new">
	<%= form_for @item, url:post_items_path(post_id: @post.id) do |f| %>
		<%= f.label :紹介文 %><br>
		<%= f.text_area :content,class: "item-new-content" %><br>
		<%= f.label :リンク %><br>
		<%= f.text_field :link,class: "item-new-link" %><br>
		<%= f.attachment_field :image %><br>
		<%= f.submit '投稿',class: "btn btn-success" %>
	<% end %>
</div>