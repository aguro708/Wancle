<div class="body post-new">
	<div class="post-new-inset">
		<div class="post-new-title">あなたの読みたい記事を書いてみよう</div>
		<%= form_for @post, url:posts_path do |f| %>
		<div class="field">
		   <%= f.collection_select :genre_id, @genres, :id, :genre, {include_blank: "ジャンル"} %>
		</div>
		<div class="field">
		   <%= f.text_area :content,class: "field-field post-new-content",:placeholder => "どんな記事が欲しいか書いてみよう" %>
		</div>
		<div class="post-new-btn-line">
		   <%= f.submit '投稿',class: "post-new-btn"  %>
		</div>
		<% end %>
	</div>
</div>