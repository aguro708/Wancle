<div class="body">
	<div class="post-new">
		<h2>あなたの読みたい記事を書いてみよう</h2><br>
		<%= form_for @post, url:post_path(@post.id) do |f| %>
		   <%= f.collection_select :genre_id, @genres, :id, :genre, {include_blank: "ジャンル"},class: 'sample' %><br><br>
		   <%= f.text_area :content,class: "post-new-content" %>
		   <%= f.submit '編集完了',class: "btn btn-success post-new-btn"  %>
		<% end %>
	</div>
</div>
