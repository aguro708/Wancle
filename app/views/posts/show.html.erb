<div class="body">
	<div class="post-padding-top">
		<%= link_to post_path(@post.id),class: "post-link-all" do %>
			<% if @post.genre_id==1 %>
				<div class="post-roop post-color-1">
			<% elsif @post.genre_id==2 %>
				<div class="post-roop post-color-2">
			<% elsif @post.genre_id==3 %>
				<div class="post-roop post-color-3">
			<% elsif @post.genre_id==4 %>
			    <div class="post-roop post-color-4">
			<% elsif @post.genre_id==5 %>
				<div class="post-roop post-color-5">
			<% elsif @post.genre_id==6 %>
				<div class="post-roop post-color-6">
			<% elsif @post.genre_id==7 %>
				<div class="post-roop post-color-7">
			<% elsif @post.genre_id==8 %>
				<div class="post-roop post-color-8">
			<% elsif @post.genre_id==9 %>
				<div class="post-roop post-color-9">
			<% elsif @post.genre_id==10 %>
				<div class="post-roop post-color-10">
			<% elsif @post.genre_id==11 %>
				<div class="post-roop post-color-11">
			<% else %>
				<div class="post-roop post-color-12">
			<% end %>
			        <p class="post-user-name">
						<%= link_to user_path(@post.user.id) do %>
							<%= attachment_image_tag @post.user, :profile_image,fallback: "no_image.jpg", size:"50x50" %>
						<% end %>
						&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
						<%= link_to @post.user.name, user_path(@post.user.id) %>
					</p>
					<%= link_to post_path(@post.id) do %>
						<p class="post-content">
							<%= @post.content %>
						</p>
						<div id="like-<%= @post.id %>">
							<%= render partial: "likes/like", locals: { post: @post } %>
						</div>
					<% end %>
				</div>
		<% end %>
	</div>
	<%= link_to "記事を載せる方はこちら",new_post_item_path(post_id: @post.id) %><br>
	<div class="item-content user-item-index">
		<% @items.each do |item| %>
		<div class="item-index">
			<a href="<%= item.link %>">
				<%= attachment_image_tag item, :image,fallback: "no_image.jpg", size:"228x160" %>
				<p class="item-content-2">
					<%= item.content %>
				</p>
			</a>
			<p class="user-name">
				<strong><%= link_to item.user.name,user_path(item.user.id) %></strong>
			</p>
			<div id="favorite-<%= item.id %>">
				<%= render partial: "favorites/favorite", locals: { item: item } %>
			</div>
		</div>
		<% end %>
		<div class="paginate">
    		<%= paginate @items %>
        </div>
	</div>
</div>
