<div class="body sign-up">
  <div class="sign-up-inset">
    <div class="sign-up-title">アカウント作成</div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <div class="field-tag">
          <%= f.label :名前 %>
        </div>
        <%= f.text_field :name, autofocus: true,class: "field-field",:placeholder => "例）山田太郎（20文字以下）" %>
      </div>
      <div class="field">
        <div class="field-tag">
          <%= f.label :性別 %>
        </div>
        <div class="gender-radio">
          <%= f.radio_button :gender, "男", {:checked => true} %> <span class="gender-radio-margin">男</span>
          <%= f.radio_button :gender, "女" %> <span class="gender-radio-margin">女</span>
        </div>
      </div>
      <div class="field">
        <div class="field-tag">
          <%= f.label :writerかuser %>
        </div>
        <div class="writer-radio">
            <%= f.radio_button :writer, "writer", {:checked => true} %> <span class="writer-radio-margin">writer</span>
            <%= f.radio_button :writer, "user" %> <span class="writer-radio-margin">user</span>
        </div>
      </div>
      <div class="field">
        <div class="field-tag">
          <%= f.label :年齢 %>
        </div>
        <%= f.number_field :old, autofocus: true,class: "field-field",:placeholder => "例）20" %>
      </div>
      <div class="field">
        <div class="field-tag">
          <%= f.label :メールアドレス %>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "field-field",:placeholder => "例）wancle.article@gmail.com" %>
      </div>

      <div class="field">
        <div class="field-tag">
          <%= f.label :パスワード %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password",class: "field-field",:placeholder => "6文字以上" %>
      </div>

      <div class="field">
        <div class="field-tag">
          <%= f.label :パスワード確認 %>
        </div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "field-field",:placeholder => "6文字以上" %>
      </div>

      <div class="sign-up-btn-line">
        <%= f.submit "登録",class: "sign-up-btn" %>
      </div>
    <% end %>
  </div>
</div>


