<div class="stats">
  <%= link_to user_following_path(user) do %>フォロー
    <strong id="following" class="stat">
      <%= user.following.count %>
    </strong>
  <% end %>
  <%= link_to user_follower_path(user) do %>フォロワー
    <strong id="followers" class="stat">
      <%= user.followers.count %>
    </strong>
  <% end %>
</div>