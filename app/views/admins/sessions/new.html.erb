<div class="body sign-in">
  <div class="sign-in-inset">
    <div class="sign-in-title">管理者ログイン</div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <div class="field-tag">
          <%= f.label :メールアドレス %>
        </div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "field-field" %>
      </div>

      <div class="field">
        <div class="field-tag">
          <%= f.label :パスワード %>
        </div>
        <%= f.password_field :password, autocomplete: "current-password",class: "field-field" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :パスワードを記憶する %>
        </div>
      <% end %>

      <div class="sign-in-btn-line">
        <%= f.submit "ログイン",class: "sign-in-btn" %>
      </div>
    <% end %>
  </div>
</div>