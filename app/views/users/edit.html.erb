<div class="body">
	<div class="profile-edit-all">
		<%= form_for @user, url:user_path(@user.id) do |f| %>
			<%= f.label :名前 %><br>
			<%= f.text_field :name,class: "profile-edit-parts" %><br>
			<%= f.label :年齢 %><br>
			<%= f.number_field :old,class: "profile-edit-parts" %><br>
		    <%= f.label :性別 %><br>
		    <p class="profile-edit-parts">
			    <%= f.radio_button :gender, "男" %> 男
			    <%= f.radio_button :gender, "女" %> 女
		    </p>
		    <%= f.label :writerかuser %><br>
		    <p class="profile-edit-parts">
			    <%= f.radio_button :writer, "writer" %> writer
				<%= f.radio_button :writer, "user" %> user
			</p>
		    <%= f.label :プロフィール画像 %>
			<%= f.attachment_field :profile_image,class: "profile-edit-parts" %><br>
			<%= f.label :自己紹介 %><br>
			<%= f.text_area :introduction,class: "introduction profile-edit-parts" %>100文字以下<br>
			<%= f.submit '編集完了',class: "btn btn-success margin-bottom" %>
		<% end %>
		<%= link_to "アカウント削除",user_path(@user.id),class: "user-destroy",method: :delete, data:{confirm: "本当にアカウントを削除しますか？"} %>
	</div>
</div>